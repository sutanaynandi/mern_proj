<%- include('partial/header.ejs') -%>
<%- include('./partial/Navbar.ejs') -%>
<% if(!blogs[0]) { %>
  <h5 style="margin: 0 auto;padding: 25%; text-align: center;">No Posts yet!</h5>
  <% } %>
<div class="container-fluid" style="background-color: rgb(236,106,106); padding-top: 20px; width: 100%;">
<div class="row">
  <% blogs.forEach((blog)=>{ %>
    <a href='/blogs/<%= blog._id %>'class="card" style="width: 18rem; margin: 0 auto;">
     <% if(blog.image[0]) { %>
      <img src="/uploads/images/<%= blog.image[0] %>" class="card-img-top">
      <% } %>
      <div class="card-body">
        <h5 class="card-title"><%= blog.title %></h5>
          <div class="card-text">
            <% if(blog.body) { %>
            <%- blog.body -%>
            <% } %>
          <p style="text-align: end;">By <%= blog.author %></p>
          </div>
          
      </div>
    </a>
    <div style="background: rgb(234,106,106);">
        <div style="margin: 0 auto;text-align: center;">
          <a href="/editBlog/<%= blog._id %>"><button class="btn btn-outline-warning edit" data-doc="<%= blog._id %>">Edit</button></a>
          <button class="btn btn-outline-warning del" data-doc="<%= blog._id %>" value="<%= blog._id %>">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                  <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                </svg>
          </button>
          
        </div>
      </div>
    <% }) %>
</div>
</div>
<%- include('partial/DeleteSnippet.ejs') -%>

<%- include('partial/footer.ejs') -%>